<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            layout="@layout/header_activity_main0424"
            android:id="@+id/header_activity_main0424"/>

    <TextView
        android:id="@+id/header_text_activity_main0424"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小米账号帮助中心"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_activity_main0424"
        />

        <include
            layout="@layout/search_activity_main0424"
            android:id="@+id/search_activity_main0424"
            app:layout_constraintTop_toBottomOf="@id/header_text_activity_main0424"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/search_result_activity_main0424"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自助服务"
            android:textSize="12sp"
            android:textColor="@color/mid_gray"
            android:layout_marginTop="25dp"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_activity_main0424"/>

        <include
            layout="@layout/service_activity_main0424"
            android:id="@+id/service_activity_main0424"
            app:layout_constraintTop_toBottomOf="@id/search_result_activity_main0424"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/service_help_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助中心"
            android:textSize="12sp"
            android:textColor="@color/mid_gray"
            android:layout_marginTop="25dp"
            android:layout_marginStart="28dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/service_help_center_more_text"
            app:layout_constraintTop_toBottomOf="@id/service_activity_main0424"/>

        <TextView
            android:id="@+id/service_help_center_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="12sp"
            android:textColor="#ff4d7dfd"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toTopOf="@id/service_help_center_text"
            app:layout_constraintStart_toEndOf="@id/service_help_center_text"
            app:layout_constraintBottom_toBottomOf="@id/service_help_center_text"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            layout="@layout/button_group_activity_main0424"
            android:id="@+id/button_group_activity_main0424"
            app:layout_constraintTop_toBottomOf="@id/service_help_center_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_view_activity_main0424"
            android:divider="@null"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/button_group_activity_main0424"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>