<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/orange_pressed" /> <!-- 设置按下时的颜色，这里是原颜色的半透明版本 -->
            <size android:width="56dp" android:height="56dp" /> <!-- 设置按下时的大小 -->
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/orange" /> <!-- 设置正常状态的颜色 -->
            <size android:width="56dp" android:height="56dp" /> <!-- 设置正常状态的大小 -->
        </shape>
    </item>
</selector>
