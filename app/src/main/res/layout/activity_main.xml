<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".work_0421.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_2_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_to_standard_activity" />

        <Button
            android:id="@+id/button_2_singletop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/go_to_singletop_activity" />

        <Button
            android:id="@+id/button_2_singletask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/go_to_singletask_activity" />

        <Button
            android:id="@+id/button_2_singleinstance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/go_to_singleinstance_activity" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_2_start_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_service" />

            <Button
                android:id="@+id/button_2_stop_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop_service" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_2_bind_service_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_service_1" />

            <Button
                android:id="@+id/button_2_unbind_service_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unbind_service" />
        </LinearLayout>

        <Button
            android:id="@+id/send_static_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/send_static_broadcast" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>